<header class="flex-row space-between-row center-col text-info" id="theUsername" name="<%= name %>">
    <h5>Welcome <span><%= name %></span></h5>
    <a href="/users/logout" class="btn btn-secondary" id="logout">Logout</a>
</header>

<main>
    <div class="join-create">
        <button id="joinRoom" class="btn btn-success">Join Room</button>
        <button id="createRoom" class="btn btn-danger">Create Room</button>
    </div>
    <div class="pre-game-main">
        <div class="rooms" id="rooms">
    
        </div>
        <div class="online">
            <h5 id="online"></h5>
        </div>
    </div>
</main>

<section id="game">
    <center><button style="border-radius:15px; margin-top:20px" class="btn btn-info" id="startGame">Start Game</button></center>
    <section id="main">
        <center><h1>Now it's really game!</h1></center>
    </section>
</section>

<!-- Modals: -->

<div class="modal" id="createRoomModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Please enter room name.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="createRoomModal_input">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="createRoomSuccess">Create Room</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/main.js"></script>